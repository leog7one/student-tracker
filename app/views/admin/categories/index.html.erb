<header>
	<h1>Categories</h1>
		<ul class="actions">
			<li><%= link_to "New Category", new_admin_category_path, class: 'new' %></li>
		</ul>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Referrals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category|  %>
      <tr>
        <td><%= link_to category.name, admin_category_path(category) %></td>
        <td><%= category.referrals.count %></td>
        <td>
          <%= link_to "Edit", edit_admin_category_path(category) %> | <%= link_to "Delete", admin_category_path(category), method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>