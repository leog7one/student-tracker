<header>
  <h1> <%= @user.name %> Referrals </h1>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Student</th>
      <th>Homeroom</th>
      <th>Referral</th>
      <th>Referral Type</th>
      <th>Occurance Date</th>
      <th>Created Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referrals.each do |referral|  %>
      <tr>
        <td><%= link_to referral.student.full_name, student_path(referral.student) %></td>
        <td><%= link_to referral.student.homeroom.room_number, admin_homeroom_path(referral.student.homeroom) %></td>
        <td><%= link_to referral.note, student_referral_path(referral.student, referral) %></td>
        <td><%= link_to referral.category.name, admin_category_path(referral.category) %></td>
        <td><%= time_format(referral.occurance_date) %></td>
        <td><%= time_format(referral.created_at) %></td>
      </tr>
    <% end %>
  </tbody>

</table>

