
<%= simple_form_for ([:student, referral]) do |f| %>
  
  <div class="field"> 
    <%= f.input :category_id, collection: Category.all, label: "Select Category", prompt: true %>
    <%= f.text_area :note, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Submit Referral", class: "btn btn-success" %>
  </div>
<% end %>
