<header>
  <h1><%= @category.name %> Referrals </h1>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Homeroom</th>
      <th>Referral</th>
      <th>Date Occured</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referrals.each do |referral|  %>
      <tr>
        <td><%= link_to referral.student.first_name + " " + referral.student.last_name, student_path(referral.student) %></td>
        <td><%= link_to referral.student.homeroom.room_number, admin_homeroom_path(referral.student.homeroom) %></td>
        <td><%= link_to referral.note, student_referral_path(referral.student, referral) %></td>
        <td><%= time_format(referral.occurance_date) %></td>
        <td><%= time_format(referral.created_at) %></td>

      </tr>
    <% end %>
  </tbody>

</table>